#!/bin/bash

read -p "Worldname (Worldname and Loadname): " WORLDNAME
echo "worldname: $WORLDNAME" > ~/Steam/st600760/settings

read -p "Worldtype (Mars, Moon or Space): " WORLDTYPE
echo "worldtype: $WORLDTYPE" >> ~/Steam/st600760/settings

read -p "Password (Server login password): " PASSWORD
echo "password: $PASSWORD" >> ~/Steam/st600760/settings

read -p "Servername (Server name ingame): " SERVERNAME
echo "servername: $SERVERNAME" >> ~/Steam/st600760/settings
